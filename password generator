# -------------------------------
# Password Generator in Python
# -------------------------------

import random
import string

def generate_password():
    """
    This function generates a random password based on user preferences.
    It allows the user to decide the length and whether to include
    letters, digits, and special characters.
    """

    print("===== Welcome to the Password Generator =====\n")

    # Step 1: Ask the user for the desired password length
    length = int(input("Enter the desired password length (e.g., 8, 12, 16): "))

    # Step 2: Ask the user which types of characters to include
    include_letters = input("Include letters? (y/n): ").lower() == 'y'
    include_digits = input("Include numbers? (y/n): ").lower() == 'y'
    include_symbols = input("Include special symbols? (y/n): ").lower() == 'y'

    # Step 3: Create a pool of characters based on user choices
    characters = ""

    if include_letters:
        characters += string.ascii_l etters     # A-Z and a-z

    if include_digits:
        characters += string.digits            # 0-9

    if include_symbols:
        characters += string.punctuation       # !@#$%^&*()_+ etc.

    # If no options selected
    if not characters:
        print("\n‚ö†Ô∏è You must select at least one character type!")
        return

    # Step 4: Generate the password using random.choices()
    password = ''.join(random.choices(characters, k=length))

    # Step 5: Display the generated password
    print("\n===================================")
    print("‚úÖ Your Generated Password is:")
    print(password)
    print("===================================")

    # Step 6: Provide password strength suggestion
    if length < 8:
        print("üî¥ Weak Password: Try using at least 8 characters.")
    elif 8 <= length < 12:
        print("üü° Moderate Password: You can make it stronger with symbols and numbers.")
    else:
        print("üü¢ Strong Password: Good job keeping it long!")

# Step 7: Run the function
generate_password()
